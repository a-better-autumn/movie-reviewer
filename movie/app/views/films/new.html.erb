<div class="col-md-4 col-md-offset-4">
  <h2>Add Movie</h2>

  <hr>
  <%= form_for @film do |f| %>

  <% if @film.errors.any? %>
    <ul>
      <% @film.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  Film
  <%= f.text_field :title%>
  <br>
  Main Cast
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "Submit", :disable_with => 'Submitting...' %>
  <% end %>

</div>
