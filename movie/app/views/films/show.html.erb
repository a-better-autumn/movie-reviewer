<div class="col-md-12">
  <div class="film">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@film)%>
        <label class="label label-success"> Movie Marked </label>
              <%= link_to("Unmark It", quit_film_path(@film), :method => :post, class: "btn btn-default") %>
      <% else %>
        <label class="label label-warning"> Movie Unmarked </label>
              <%= link_to("Mark It",   join_film_path(@film), :method => :post, class: "btn btn-default") %>
      <% end %>
    </span>

    <%= link_to("Write a Review", new_film_review_path(@film), class: "btn btn-default pull-right") %>

    <% if current_user && current_user == @film.user %>
    <%= link_to("Edit", edit_film_path(@film), class: "btn btn-primary pull-right")%>
    <% end %>

  </div>

  <h2><%= @film.title%></h2>
  <p><%= @film.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Review</th>
        <th>Creator</th>
        <th>Update Time</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.content %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <div class="text-center">
      <%= will_paginate @reviews %>
    </div>

</div>
